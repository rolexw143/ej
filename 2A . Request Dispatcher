//index.html(code)
<html>
    <body>
        <form action="LoginServlet">
            Enter a username: <input type="text" name="user"><br><br>
            Enter a password: <input type="password" name="pass"><br><br>
            <input type="reset">
            <input type="submit" value="Click to Login">       
        </form>
    </body>
</html>


//LoginServlet(code)

